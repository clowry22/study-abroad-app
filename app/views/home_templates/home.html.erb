<%if cookies.fetch(:most_recent_country) == nil%>
  <h1>Which country are you in? </h1>


  <ul>
  <%@array_of_countries.each do |country|%>
        <li>
          <a href="/home/<%=country.fetch("name").downcase()%>"> <%=country.fetch("name").downcase()%> </a>
            
    </li>

  <%end%> 

  </ul>
<%else%>
  <%@country = cookies.fetch(:most_recent_country)%>
 
  <a href="/home/<%=@country%>">Load Home </a>
<%end%>

