<h2>My virtual passport </h2>
<br>

<table class="table table-striped table-bordered"> 
  <thead class="thead-light">
    <tr>
      <th scope="col">Country Code</th>
      <th scope="col">Country</th>
      <th scope="col">Added On</th>
      <th scope="col"> </th>
    </tr>
  </thead>


  <tbody>

  <%user_id = User.where({:username => session.fetch(:user_name)}).first.id%>
  <%Country.where({ :userid => user_id}).each do |country|%>
    <tr>
      <th scope="row"><%=country.country_code%></th>
      <td><%=country.name%> </td>
      <td><%=country.created_at%></td>
      <td><a href="home/<%=country.name%>/info">Show details <a></td>
    <tr>
  <%end%>

  </tbody>

</table>